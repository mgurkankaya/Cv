@using Cv.Models.Entity
@model List<TblAbout>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h3 class="mt-3">Hakkımda</h3>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Adres</th>
            <th>Telefon</th>
            <th>Mail</th>
            <th>Hakkımda Açıklama</th>
            <th>Fotoğraf</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Adress</td>
                <td>@item.Phone</td>
                <td>@item.Mail</td>
                <td>@item.Description</td>
                <td>@item.Photo</td>
                <td>
                    <a href="/AboutAdmin/DeleteAbout/@item.Id"><i class="fas fa-trash text-red m-1"></i></a>
                    <a href="/AboutAdmin/UpdateAbout/@item.Id"><i class="fas fa-edit text-gray-dark m-1"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>