@using Cv.Models.Entity
@model List<TblEducation>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Eğitimlerim</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Başlık</th>
            <th>Alt Başlık</th>
            <th>Alt Başlık 2</th>
            <th>Tarih</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Subtitle</td>
                <td>@item.Subtitle2</td>
                <td>@item.Date</td>
                <td>
                    <a href="/EducationAdmin/DeleteEducation/@item.Id"><i class="fas fa-trash text-red m-1"></i></a>
                    <a href="/EducationAdmin/UpdateEducation/@item.Id"><i class="fas fa-edit text-gray-dark m-1"></i></a>
                </td>

            </tr>
        }

    </tbody>
</table>
