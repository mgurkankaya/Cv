@using Cv.Models.Entity
@model List<TblCertification>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-md-12">
    <div class="card">
        <div class="card-header p-2">
            <ul class="nav nav-pills">
                <h2>Sertifikalar</h2>
            </ul>
        </div><!-- /.card-header -->
        @foreach (var item in Model)
        {


        <div class="card-body">
            <div class="tab-content">
                <div class="timeline timeline-inverse">
                    <!-- timeline time label -->
                    <div class="time-label">
                        <span class="bg-danger">
                            @item.Date
                        </span>
                    </div>
                    <!-- /.timeline-label -->
                    <!-- timeline item -->
                    <div>
                        <i class="fa fa-certificate bg-primary"></i>

                        <div class="timeline-item">
                            <span class="time"><i class="far fa-clock"></i> @item.Time</span>

                            <h3 class="timeline-header"> Sertifika ID :<a href="#">@item.Id</a> </h3>

                            <div class="timeline-body">
                               @item.Certifications
                            </div>
                            <div class="timeline-footer">
                                <a href="/CertificationAdmin/DeleteCertification/@item.Id"><i class="fas fa-trash text-red m-1"></i></a>
                                <a href="/CertificationAdmin/UpdateCertification/@item.Id"><i class="fas fa-edit text-dark m-1"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.tab-content -->
        </div><!-- /.card-body -->
        }
    </div>
    <!-- /.nav-tabs-custom -->
</div>