@model Cv.Models.Entity.TblInterest
@{
    ViewBag.Title = "AddInterest";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="resume-section" id="contact">
    <div class="resume-section-content">
        <h2 class="mb-5">İlgi Alanı Ekle</h2>
        <form method="post" class="form-group">
            @Html.TextAreaFor(x => x.Description, new { placeholder = "İlgi alanı girin...", @class = "form-control mb-3", @rows = 10 })
            <button class="btn btn-outline-info mt-3">Ekle</button>
        </form>
    </div>
</section>