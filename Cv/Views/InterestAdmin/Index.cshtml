@using Cv.Models.Entity
@model List<TblInterest>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h3 class="mt-3">İlgi Alanlarım</h3>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>İlgi Alanı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Description</td>
                <td>
                    <a href="/InterestAdmin/DeleteInterest/@item.Id"><i class="fas fa-trash text-red m-1"></i></a>
                    <a href="/InterestAdmin/UpdateInterest/@item.Id"><i class="fas fa-edit text-gray-dark m-1"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>