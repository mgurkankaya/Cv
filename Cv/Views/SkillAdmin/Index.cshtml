@using Cv.Models.Entity
@model List<TblSkill>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
    var progClass = "";
    var spanClass = "";
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Yetenek Listesi</h3>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th style="width: 10px">#</th>
                                    <th>Task</th>
                                    <th>Progress</th>
                                    <th style="width: 40px">Label</th>
                                    <th style="width: 40px">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                               @foreach (var item in Model)
                               {

                                   count++;

                                   if (item.Rate<100 && item.Rate >=85)
                                   {
                                       progClass = "  progress-bar bg-success";
                                       spanClass = "badge bg-success";
                                   }
                                   if (item.Rate < 85 && item.Rate >= 70)
                                   {
                                       progClass = " progress-bar bg-primary ";
                                       spanClass = "badge bg-primary";
                                   }
                                   if (item.Rate < 70 && item.Rate >= 50)
                                   {
                                       progClass = "progress-bar bg-warning";
                                       spanClass = "badge bg-warning";
                                   }
                                   if (item.Rate < 50 && item.Rate >= 0)
                                   {
                                       progClass = "progress-bar bg-danger";
                                       spanClass = "badge bg-danger";
                                   }

                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Skill</td>
                                        <td>
                                            <div class="progress progress-xs">
                                                <div class="@progClass" style="width: @item.Rate%"></div>
                                            </div>
                                        </td>
                                        <td><span class="@spanClass">@item.Rate%</span></td>
                                        <td class="text-center">
                                            <a href="/SkillAdmin/DeleteSkill/@item.Id"><i class="fas fa-trash text-red m-1"></i></a>
                                            <a href="/SkillAdmin/UpdateSkill/@item.Id"><i class="fas fa-edit text-gray-dark m-1"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>